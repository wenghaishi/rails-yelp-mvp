<%= @restaurants.name %>
<%= link_to 'New review', new_restaurant_review_path(@restaurants)%>
<%= link_to 'Delete', restaurant_path(@restaurants), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurants.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <%= link_to 'Delete review', review_path(review), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
  <% end %>
</ul>
<br>